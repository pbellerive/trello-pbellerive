{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "test",
    "node_modules"
  ]
}
